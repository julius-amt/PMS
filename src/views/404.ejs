<%- include('./partials/head.ejs') %>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div
        class="text-center max-w-md mx-auto p-8 bg-white rounded-xl shadow-2xl"
    >
        <div class="mb-8">
            <h1 class="text-9xl font-bold text-[#29C782] mb-4 animate-bounce">
                404
            </h1>
            <h2 class="text-3xl font-semibold text-gray-800 mb-4">
                Oops! Page Not Found
            </h2>
            <p class="text-gray-600 mb-6">
                The page you're looking for seems to have taken an unexpected
                detour. Don't worry, it happens to the best of us!
            </p>
        </div>

        <div class="space-y-4">
            <a
                href="/products/"
                class="inline-block bg-[#242847] cursor-poiter text-white px-6 py-3 rounded-lg transition-colors"
            >
                Return to Products List
            </a>
            <div class="mt-4">
                <p class="text-sm text-gray-500">Or try:</p>
                <div class="flex justify-center space-x-4 mt-2">
                    <a
                        href="/auth/login"
                        class="text-[#242847] cursor-poiter hover:text-[#242847] transition-colors"
                    >
                        Login
                    </a>
                    <a
                        href="/auth/signup"
                        class="text-[#242847] cursor-poiter hover:text-[#242847] transition-colors"
                    >
                        Signup
                    </a>
                </div>
            </div>
        </div>

        <svg
            class="absolute bottom-0 left-0 w-full text-gray-200"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 1440 320"
        >
            <path
                fill="currentColor"
                fill-opacity="1"
                d="M0,160L48,181.3C96,203,192,245,288,250.7C384,256,480,224,576,202.7C672,181,768,171,864,176C960,181,1056,203,1152,218.7C1248,235,1344,245,1392,250.7L1440,256L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
            ></path>
        </svg>
    </div>

    <script>
        // Optional playful interaction
        document.querySelector("h1").addEventListener("click", function () {
            this.classList.toggle("animate-spin");
        });
    </script>
</body>
